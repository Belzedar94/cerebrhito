{
  "name": "cerebrhito-backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:validation": "ts-node scripts/test-validation.ts",
    "test:errors": "ts-node scripts/test-error-handling.ts",
    "test:sanitization": "ts-node scripts/test-sanitization.ts",
    "test:async": "ts-node scripts/test-async.ts",
    "test:all": "npm run test && npm run test:validation && npm run test:errors && npm run test:sanitization && npm run test:async",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "db:migrate": "node scripts/migrate.js",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.{ts,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,json}'",
    "validate": "npm run typecheck && npm run lint && npm run format:check && npm run test:all"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "@types/ua-parser-js": "^0.7.39",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "sanitize-html": "^2.12.1",
    "ua-parser-js": "^2.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.19",
    "@types/pg": "^8.11.0",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
